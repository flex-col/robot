<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="chat_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/act_hor_mar_sm</item>
        <item name="android:textColor">@color/text_news_tip</item>
    </style>

    <style name="chat_content_mine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/act_hor_mar_sm</item>
        <item name="android:layout_toLeftOf">@id/fresco_avatar</item>
        <item name="android:background">@mipmap/bg_chat_right</item>
    </style>

    <style name="chat_content_target">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/act_hor_mar_sm</item>
        <item name="android:layout_toRightOf">@id/fresco_avatar</item>
        <item name="android:background">@mipmap/bg_chat_left</item>
        <item name="android:minHeight">42dp</item>
    </style>

</resources>